# Environment Variables for API Gateway

# Server Configuration
PORT=8080
NODE_ENV=development

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_KEY={}
# Alternative: path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=path/to/serviceAccountKey.json

# Service URLs
AI_SERVICE_URL=http://localhost:8000
DATA_SERVICE_URL=http://localhost:8001

# CORS Origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,https://your-firebase-app.web.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Authentication
BYPASS_AUTH=false  # Set to true only in development for testing

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/api-gateway.log

# Redis (for advanced caching - optional)
REDIS_URL=redis://localhost:6379

# Health Check
HEALTH_CHECK_INTERVAL=30000  # 30 seconds

# Request Timeouts
API_TIMEOUT=30000  # 30 seconds
PROXY_TIMEOUT=60000  # 60 seconds

# Security
HELMET_CSP_ENABLED=true
TRUST_PROXY=true
